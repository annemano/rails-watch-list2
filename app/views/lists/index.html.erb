<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "banner.jpg" %>');">
  <div class="container banner-text">
    <h1>Save any kind of movies!</h1>
  </div>
</div>

<div class="container my-5">
  <div class="row my-3">
    <div class="col">
      <h2>My Lists</h2>
    </div>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-sm-12 col-md-6 mb-3">
        <%= link_to list_path(list) do  %>
          <div class="card-category grow" data-aos="fade-up" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
