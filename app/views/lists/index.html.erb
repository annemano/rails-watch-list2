<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container banner-text">
    <h1>Save any kind of movies!</h1>
  </div>
</div>

<div class="container">
  <h2> My lists </h2>
  <div class="row">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="col-sm-12 col-md-6">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.image_url %>')">
            <%= list.name %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
